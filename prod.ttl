#################################
# METADATA
#################################
<https://w3id.org/prod#> rdf:type voaf:Vocabulary , 
                                 owl:Ontology ;
    dce:modified "July 11th 2017"^^xsd:string ;
    owl:versionInfo "July 11th 2017"^^xsd:string ;
    dcterms:issued "2016-05-25"^^xsd:date ;
    #owl:versionIRI <https://w3id.org/prod/prod-0.1.0> ;
    owl:versionInfo "v0.1.0" ;
    #owl:priorVersion <https://w3id.org/prod/prod-0.1.0> ;
    dcterms:title "PROD: PRODuct ontology "@en ;
    dcterms:description """The PRODuct Ontology (PROD) extends the Building Topology Ontology (BOT) with more specific building elements."""@en ;
    dcterms:creator [a foaf:Person ; foaf:name "Mads Holten Rasmussen" ] ;
    dcterms:creator [a foaf:Person ; foaf:name "Pieter Pauwels" ] ;
    #dcterms:contributor [a foaf:Person ; foaf:name "" ] ;
    dcterms:license <https://creativecommons.org/licenses/by/1.0/> ;
    vann:preferredNamespacePrefix "prod" ;
    vann:preferredNamespaceUri <https://w3id.org/prod#> ;
    dce:Language "en" ;
    dce:title "PROD" ;
    dce:description "Products in the AEC industry" ;
    owl:imports <https://w3id.org/prod/BuildingElements> .

#################################
# CLASSES
#################################
prod:Product 
        a owl:Class ;
        rdfs:subClassOf bot:Element ;
        rdfs:label      "Product"@en ,
                        "Produkt"@da ;
        rdfs:comment    "A product is an article or substance that is manufactured or refined for sale"@en ,
                        "Et produkt er en artikel eller substans som er fremstillet eller rafineret til salg"@da .
